
<package>
  <description brief="An OpenNI body camera ROS driver">

    A ROS driver for OpenNI NITE body pointclouds and skeletons from OpenNI cameras.

    The driver publishes body pointclouds and skeletons. Based on openni_camera by Suat Gedikli, Patrick Mihelich, and Radu Bogdan Rusu, and openni_tracker by Tim Field.

  </description>

  <author>David Stolarsky</author>

  <license>BSD</license>

  <url>http://ros.org/wiki/body_camera</url>

  <review status="experimental" notes="beta"/>

  <depend package="camera_info_manager" />
  <depend package="dynamic_reconfigure" />
  <depend package="image_transport" />
  <depend package="openni" />
  <depend package="nite"/>
  <depend package="kdl"/>
  <depend package="nodelet" />
  <depend package="roscpp" />
  <depend package="roslib"/>
  <depend package="geometry_msgs"/>
  <depend package="sensor_msgs" />

  <!-- Following packages only required for old nodelet and launch files -->
  <depend package="pcl" />
  <depend package="pcl_ros" />
  <depend package="stereo_msgs" />
  <depend package="tf" />

  <rosdep name="libusb1.0" />
  <rosdep name="ps-engine"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lopenni_nodelet -lopenni_driver" />
    <nodelet plugin="${prefix}/openni_nodelets.xml" />
  </export>

  <platform os="ubuntu" version="10.04"/>
  <platform os="ubuntu" version="10.10"/>
</package>
